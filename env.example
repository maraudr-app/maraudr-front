# Configuration de base
NODE_ENV=development

# URLs des services backend
VITE_API_URL=http://localhost:8082
VITE_ASSO_API_URL=http://localhost:8080
VITE_STOCK_API_URL=http://localhost:8081
VITE_GEO_API_URL=http://localhost:8084

# Base de données PostgreSQL
POSTGRES_DB=maraudr_db
POSTGRES_USER=maraudr_user
POSTGRES_PASSWORD=maraudr_password
DATABASE_URL=postgresql://maraudr_user:maraudr_password@localhost:5432/maraudr_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secret (CHANGER EN PRODUCTION !)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# CORS
CORS_ORIGIN=http://localhost:3000

# Ports des services
FRONTEND_PORT=3000
BACKEND_PORT=8082
ASSO_SERVICE_PORT=8080
STOCK_SERVICE_PORT=8081
GEO_SERVICE_PORT=8084

# Mode de déploiement
COMPOSE_PROFILES=development 